@{
    Layout = "~/Views/_layout.cshtml";
    @inherits System.Web.Mvc.WebViewPage
}


<script src="~/Components/Employee/EmployeeController.js"></script>


<section id="aboutproj" class="jumbotron  short well-back" >
    <div class="container">
        <h3>الموظفين - إنشاء</h3>
    </div>
</section>
<section class="container no-padding" ng-controller="EmployeeController">
    <input type="hidden" value="create" id="token" />

    <div class="row" ng-show="model.showMessage">
        <div class="col-md-12">
            <div class="alert alert-success">
                <label id="msg">تم الحفظ بنجاح</label>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <form name="update_form" id="update_form">
            <div class="panel panel-default">
                <div class="panel-body form-horizontal ">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="description" class="col-sm-4 control-label">اسم الموظف</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="e_name" name="e_name" ng-model="model.employee.NAME">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-4 control-label">رقم الملف</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="e_fileNumber" name="e_fileNumber" ng-model="model.employee.FILE_NUMBER">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-4 control-label">الرقم القومي</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="e_nationalID" name="e_nationalID" ng-model="model.employee.NATIONAL_ID" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-4 control-label">رقم التأمين</label>
                            <div class="col-sm-8">
                                <input  type="text" class="form-control" id="e_insuranceNumber" name="e_insuranceNumber" ng-model="model.employee.INSURANCE_NUMBER" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                            <div class="form-group" >
                                <label for="amount" class="col-sm-4 control-label">صورة ضوئية</label>
                                <div class="col-sm-8">
                                    <input ngf-select ng-model="model.files" ngf-multiple="true" id="files" name="files" type="file" />
                                    <ul>
                                        <li ng-repeat="f in model.files">{{f.name}}</li>
                                    </ul>
                                </div>
                            </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-4 control-label">تاريخ التعيين</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="e_dateHiredr" name="e_dateHiredr" ng-model="model.employee.DATE_HIRED" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-4 control-label">الإدارة</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="e_department" name="e_department" ng-model="model.employee.DEPARTMENT" />
                            </div>
                        </div>
                         </div>
                        <hr />

                        <div class="form-group">
                            <div class="col-sm-12">
                                <hr class="wide" />
                                <button type="submit" class="btn btn-primary center  preview-add-button" ng-click="CreateEmployee()">
                                    <span class="glyphicon glyphicon-plus"></span>حفظ
                                </button>
                            </div>
                        </div>
                </div>
            </div>
            <!-- / panel preview -->
        </form>

    </div>
    <!-- /.col -->
</section>
